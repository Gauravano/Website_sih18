<div class="container">
  <div class="card-panel blue">
    <h4>Employees List</h4>
  </div>
</div>

<br />
<br />

<div class="container">

  <% @employees.each do |employee| %>
      <div class="card-panel hoverable orange" style="display: flex; justify-content: space-between;">
        <div>
          <h5><%= employee.name %></h5>
        </div>
        <div style="vertical-align: middle;">
          <%= link_to "Send",{:controller => :home,:action => :send_notification, eid: employee.id}, :method => :post %>
        </div>
      </div>
  <% end %>
</div>