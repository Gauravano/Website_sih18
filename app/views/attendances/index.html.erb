<p id="notice"><%= notice %></p>

<h1>Attendances</h1>

<table>
  <thead>
    <tr>
      <th>Image uri</th>
      <th>Location</th>
      <th>Remarks</th>
      <th>Timein</th>
      <th>Timeout</th>
      <th>Employee</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @attendances.each do |attendance| %>
      <tr>
        <td><%= attendance.image_uri %></td>
        <td><%= attendance.location %></td>
        <td><%= attendance.remarks %></td>
        <td><%= attendance.timeIn %></td>
        <td><%= attendance.timeOut %></td>
        <td><%= attendance.employee %></td>
        <td><%= link_to 'Show', attendance %></td>
        <td><%= link_to 'Edit', edit_attendance_path(attendance) %></td>
        <td><%= link_to 'Destroy', attendance, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

